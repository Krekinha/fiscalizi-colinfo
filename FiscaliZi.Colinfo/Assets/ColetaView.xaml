<UserControl x:Class="FiscaliZi.Colinfo.Assets.ColetaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FiscaliZi.Colinfo.Assets"
             xmlns:Model="clr-namespace:FiscaliZi.Colinfo.Model"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:MDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=Model:DesignData, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <Model:TotalValItemsConverter x:Key="TotalValItemsConverter" />
        <Model:RotaConverter2 x:Key="RotaConverter2" />
        <Model:RotaConverter3 x:Key="RotaConverter3" />
        <Model:ResumoVendasConverter x:Key="ResumoVendasConverter" />
        <Model:PedNumConverter x:Key="PedNumConverter"/>
        <Model:TotalVendasConverter x:Key="TotalVendasConverter"/>
        <Model:PesoPedidoConverter x:Key="PesoPedidoConverter"/>
        <Model:TabelaConverter x:Key="TabelaConverter"/>
        <Model:OcorrenciaConverter x:Key="OcorrenciaConverter"/>
        <Model:StringToIntConverter x:Key="StringToIntConverter"/>
        <Model:ArquivoExistColorConverter x:Key="ArquivoExistColorConverter"/>
        <Model:IsVisibleListConverter x:Key="IsVisibleListConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <MDesign:Card 
            Grid.Column="0" 
            BorderThickness="3"
            MinHeight="700" Width="300">
            <Grid x:Name="grdVendas" Height="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel 
                    Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="10,0">
                    <DatePicker x:Name="datPedidos" 
                                SelectedDate="{x:Static sys:DateTime.Now}"
                                Language="pt-BR"
                                Width="90" 
                                HorizontalAlignment="Left" 
                                Margin="0,10,0,5"/>
                    <Button x:Name="btnAtualizaVendas"
                            cal:Message.Attach="AtualizaPedidos(datPedidos.Text)" 
                            HorizontalAlignment="Right" 
                            Width="25" Height="25"
                            Padding="2 0 2 0"
                            Margin="15,10,0,5"
                            MDesign:RippleAssist.IsCentered="True">
                        <MDesign:PackIcon Kind="Refresh" />
                    </Button>
                    <MDesign:PopupBox 
                        Padding="2 0 2 0" 
                        Foreground="#FF918B8B" 
                        Margin="130,10,0,5"
                        Width="25" Height="25">
                        <StackPanel>
                            <Button Content="More"/>
                            <Button Content="Options"/>
                        </StackPanel>
                    </MDesign:PopupBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="1">
                    <Separator 
                    Style="{StaticResource MaterialDesignDarkSeparator}" 
                    Margin="8 0 8 0">
                    </Separator>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock 
                            Text="VEND" 
                            Margin="10,0,0,0" 
                            FontWeight="Bold"/>
                        <TextBlock 
                            Text="ROTA" 
                            Margin="10,0,0,0" 
                            FontWeight="Bold"/>
                        <TextBlock 
                            Text="PEDS" 
                            Margin="10,0,0,0" 
                            FontWeight="Bold"/>
                        <TextBlock 
                            Text="RESUMO" 
                            Margin="10,0,0,0" 
                            FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
                <ListBox x:Name="lstVendas"
                          Grid.Column="0" 
                          Grid.Row="2"
                          ItemsSource="{Binding Vendas}" 
                          IsSynchronizedWithCurrentItem="True" 
                         Style="{DynamicResource ListBox_Vendas}" ItemContainerStyle="{StaticResource ListBoxItem_Vendas}" Margin="5,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="brResumo" Height="25">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,3,0,0">
                                        <TextBlock Text="{Binding CodVendedor}" 
                                               FontWeight="Bold" >
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource ArquivoExistColorConverter}" >
                                                    <Binding Path="Pedidos"/>
                                                    <Binding Path="DataContext" ElementName="txtResumo" />
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock 
                                            Text="{Binding Pedidos, Converter={StaticResource RotaConverter2}}" 
                                            Margin="15,0,0,0" Width="30">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource ArquivoExistColorConverter}" >
                                                    <Binding Path="Pedidos"/>
                                                    <Binding Path="DataContext" ElementName="txtResumo" />
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock 
                                            Text="{Binding Pedidos.Count}" 
                                            Margin="10,0,0,0" 
                                            Width="25">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource ArquivoExistColorConverter}">
                                                    <Binding Path="Pedidos"/>
                                                    <Binding Path="DataContext" ElementName="txtResumo" />
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock x:Name="txtResumo" 
                                                   DataContext="{Binding Converter={StaticResource ResumoVendasConverter}}"
                                                   Margin="15,0,0,0">
                                            <Run Text="{Binding [0].QntCX}"/>
                                            <Run Text="{Binding [0].Sigla}"/>
                                            <Run Text="{Binding [1].QntCX}"/>
                                            <Run Text="{Binding [1].Sigla}"/>
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource ArquivoExistColorConverter}" ConverterParameter="txtres">
                                                    <Binding Path="Content" Mode="OneWay" RelativeSource="{RelativeSource TemplatedParent}" />
                                                    <Binding Path="DataContext" ElementName="txtResumo" />
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </MDesign:Card>
        <MDesign:Card 
            Grid.Column="1" 
            BorderThickness="3"
            MinHeight="700" 
            UniformCornerRadius="0" 
            Margin="5,0,0,0"
            DataContext="{Binding Vendas}" Width="500" Height="700">
            <GroupBox Header="PEDIDOS" 
                          Margin="3"
                          MDesign:ShadowAssist.ShadowDepth="Depth1"
                          Style="{DynamicResource MaterialDesignGroupBox}" 
                          MDesign:ColorZoneAssist.Mode="PrimaryMid" 
                          BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgPedidos"
                              Grid.Row="0"
                              ItemsSource="{Binding Pedidos}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserResizeColumns="False" 
                              CanUserReorderColumns="False" 
                              CanUserDeleteRows="False" 
                              CanUserResizeRows="False" 
                              IsReadOnly="True" 
                              HeadersVisibility="Column"
                              IsSynchronizedWithCurrentItem="True" 
                              Style="{DynamicResource DatagridCustomMDesign}" 
                              CellStyle="{DynamicResource DatagridCellCustomMDesign}" 
                              RowStyle="{DynamicResource DataGridRowCustomMDesign}"
                              ColumnHeaderStyle="{StaticResource CustomMaterialDesignDataGridColumnHeader}" 
                              SelectionMode="Single" 
                              VerticalAlignment="Top"
                              Background="{x:Null}">
                        <DataGrid.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.MergedDictionaries>
                                    <ResourceDictionary Source="/FiscaliZi.Colinfo;component/Resources/Dictionaries/dicDatagrid.xaml"/>
                                </ResourceDictionary.MergedDictionaries>
                            </ResourceDictionary>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PED" 
                                Binding="{Binding NumPedido, Converter={StaticResource PedNumConverter}}" 
                                CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter}"
                                CanUserResize="False" />
                            <DataGridTextColumn Header="ROTA" 
                                Binding="{Binding Pasta, Converter={StaticResource RotaConverter3}}"                                         
                                CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter}"
                                CanUserResize="False" />
                            <DataGridTextColumn Header="CLIENTE" 
                                CanUserResize="False" 
                                Width="55">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat=" {0}-{1}">
                                        <Binding Path="Cliente.RegiaoCliente" />
                                        <Binding Path="Cliente.NumCliente" />
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="R. SOCIAL" 
                                Binding="{Binding Cliente.Razao}" 
                                CanUserResize="False" 
                                Width="200" />
                            <DataGridTextColumn Header="VAL. PED" 
                                Binding="{Binding Items, Converter={StaticResource TotalValItemsConverter}}" 
                                CanUserResize="False"
                                Width="75" />
                            <DataGridTextColumn Header="PESO" 
                                                Binding="{Binding Converter={StaticResource PesoPedidoConverter}}"
                                                CanUserResize="False"
                                                Width="50" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Separator 
                        Grid.Row="1"
                            Style="{StaticResource MaterialDesignDarkSeparator}" Margin="0,5"/>
                    <Expander Grid.Row="2">
                        <Expander.Header>
                            <TextBlock Foreground="#FFABADB3" Text="Totais" FontSize="20" Grid.Row="0"/>
                        </Expander.Header>
                        <StackPanel 
                                Orientation="Vertical"
                                TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                Margin="5">
                            <DataGrid x:Name="dgTotaisVenda"
                                      ItemsSource="{Binding /, Converter={StaticResource TotalVendasConverter}}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False" 
                                      CanUserResizeColumns="False" 
                                      CanUserReorderColumns="False" 
                                      CanUserDeleteRows="False" 
                                      CanUserResizeRows="False" 
                                      IsReadOnly="True" 
                                      HeadersVisibility="Column"
                                      IsSynchronizedWithCurrentItem="True" 
                                      Style="{DynamicResource DatagridCustomMDesign}" 
                                      CellStyle="{DynamicResource DatagridCellCustomMDesign}" 
                                      RowStyle="{DynamicResource DataGridRowCustomMDesign}"
                                      ColumnHeaderStyle="{StaticResource CustomMaterialDesignDataGridColumnHeader}" 
                                      SelectionMode="Single" VerticalAlignment="Top">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="PRODUTO" 
                                                        Binding="{Binding Produto.Codigo}" 
                                                        CanUserResize="False" />
                                    <DataGridTextColumn Header="DESCRICAO" 
                                                        Binding="{Binding Produto.Descricao}" 
                                                        CanUserResize="False" />
                                    <DataGridTextColumn Header="CX" 
                                                        Binding="{Binding QntCX}" 
                                                        CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter}"
                                                        CanUserResize="False" />
                                    <DataGridTextColumn Header="UND" 
                                                        Binding="{Binding QntUND}" 
                                                        CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter}"
                                                        CanUserResize="False" />
                                    <DataGridTextColumn Header="V. TOTAL" 
                                                        Binding="{Binding ValorTotal, StringFormat=\{0:N2\}}" 
                                                        CanUserResize="False" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <MDesign:Card 
                                    Height="50" 
                                    Margin="0,0,0,5"
                                    MDesign:ShadowAssist.ShadowDepth="Depth0"/>
                        </StackPanel>
                    </Expander>
                </Grid>
            </GroupBox>
        </MDesign:Card>
        <MDesign:Card 
            Background="{DynamicResource AccentColorBrush}" 
            Grid.Column="2" 
            BorderThickness="3"
            MinHeight="700"
            Height="700"
            UniformCornerRadius="0" 
            Margin="5,0,0,0" 
            Width="530">
            <GroupBox Header="DETALHE PEDIDO" 
                          Margin="3"
                          MDesign:ShadowAssist.ShadowDepth="Depth1"
                          Style="{DynamicResource MaterialDesignGroupBox}" 
                          MDesign:ColorZoneAssist.Mode="PrimaryMid" 
                          BorderThickness="0">
                <Grid x:Name="grdPEDS1" 
                      DataContext="{Binding Vendas/Pedidos}">
                    <DataGrid x:Name="dgDetalhePedido"
                              ItemsSource="{Binding Items}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserResizeColumns="False" 
                              CanUserReorderColumns="False" 
                              CanUserDeleteRows="False" 
                              CanUserResizeRows="False" 
                              IsReadOnly="True" 
                              HeadersVisibility="Column"
                              IsSynchronizedWithCurrentItem="True" 
                              Style="{DynamicResource DatagridCustomMDesign}" 
                              CellStyle="{DynamicResource DatagridCell_DetalhePedido}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeader_DetalhePedido}"
                              Background="#FF2D2D30"
                              Foreground="{DynamicResource AccentSelectedColorBrush}"
                              RowStyle="{DynamicResource DataGridRow_DetalhePedido}"
                              FontSize="10" GridLinesVisibility="None">
                        <DataGrid.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.MergedDictionaries>
                                    <ResourceDictionary Source="/FiscaliZi.Colinfo;component/Resources/Dictionaries/dicImages.xaml"/>
                                </ResourceDictionary.MergedDictionaries>
                            </ResourceDictionary>
                        </DataGrid.Resources>
                        <DataGrid.Visibility>
                            <Binding Converter="{StaticResource IsVisibleListConverter}" Mode="OneWay" Path="Items.Count" RelativeSource="{RelativeSource Self}"/>
                        </DataGrid.Visibility>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PROD" 
                                                Width="40"
                                                Binding="{Binding Produto.Codigo, Converter={StaticResource StringToIntConverter}}" 
                                                CanUserResize="False" />
                            <DataGridTextColumn Header="DESCRIÇÃO" 
                                                Width="220"
                                                Binding="{Binding Produto.Descricao}"
                                                CanUserResize="False" />
                            <DataGridTextColumn Header="CX" 
                                            Binding="{Binding QntCX}"
                                            CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter_DP}"
                                            CanUserResize="False" />
                            <DataGridTextColumn Header="UND" 
                                            Binding="{Binding QntUND}"
                                            CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter_DP}"
                                            CanUserResize="False" />
                            <DataGridTextColumn Header="OCO" 
                                            Binding="{Binding Ocorrencia, Converter={StaticResource OcorrenciaConverter}}"
                                            CellStyle="{StaticResource DatagridCell_Ocorrencia}"
                                            CanUserResize="False">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="TAB" 
                                            Binding="{Binding Tabela, Converter={StaticResource TabelaConverter}}"
                                            CellStyle="{StaticResource DatagridCellCustomMDesign_CellCenter_DP}"
                                            CanUserResize="False" />
                            <DataGridTextColumn Header="V. UND" 
                                            Binding="{Binding ValorUnid, StringFormat=\{0:N2\}}"
                                            CanUserResize="False" />
                            <DataGridTextColumn Header="V. TOT" 
                                            Binding="{Binding ValorTotal, StringFormat=\{0:N2\}}"
                                            CanUserResize="False" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

        </MDesign:Card>
    </Grid>
</UserControl>

