<Metro:MetroWindow x:Class="FiscaliZi.Colinfo.MainWindow"        
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                   
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
                   xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"        
                   xmlns:local="clr-namespace:FiscaliZi.Colinfo" 
                   xmlns:views="clr-namespace:FiscaliZi.Colinfo.Views"
                   mc:Ignorable="d"       
                   Title="MainWindow" 
                   Height="364" Width="796"
                   DataContext="{Binding Source={StaticResource Locator}, Path=Main}" >

    <Window.Resources>
    </Window.Resources>

    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Metro:MetroAnimatedTabControl 
            x:Name="tbcMain" 
            Metro:TabControlHelper.IsUnderlined="True" 
            Margin="5,10,0,0">
            <Metro:MetroTabItem 
                Header="Coleta  " 
                Metro:ControlsHelper.HeaderFontSize="15" 
                Metro:ControlsHelper.HeaderFontWeight="Black" 
                Metro:TabControlHelper.IsUnderlined="True" 
                Metro:ControlsHelper.HeaderMargin="10,0,0,0">
                <views:Coleta />
            </Metro:MetroTabItem>
            <Metro:MetroTabItem 
                Header="Opções" 
                Metro:ControlsHelper.HeaderFontSize="15" 
                Metro:ControlsHelper.HeaderFontWeight="Black">
                <Metro:MetroAnimatedTabControl 
                    TabStripPlacement="Left">
                    <Metro:MetroTabItem 
                        Header="VEÍCULOS" 
                        Metro:ControlsHelper.HeaderFontSize="15">
                        <TextBlock Text="CONF" />
                    </Metro:MetroTabItem>
                    <Metro:MetroTabItem 
                        Header="GERAL" 
                        Metro:ControlsHelper.HeaderFontSize="15"/>
                </Metro:MetroAnimatedTabControl>
            </Metro:MetroTabItem>
        </Metro:MetroAnimatedTabControl>
        <StatusBar Grid.Row="2" VerticalAlignment="Bottom">
            <StatusBarItem Content="NFPush App"/>
            <Separator  />
            <StatusBarItem Content="Status:"/>
            <StatusBarItem Content="{Binding SelectedItem.Header, ElementName=tbcMain, Mode=OneWay}" />
        </StatusBar>
    </Grid>

</Metro:MetroWindow>
